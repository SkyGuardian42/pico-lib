function generatenoise()
	for x=0,mx do
		for y=0,my do
			pset(x,y,12+flr(rnd(2)))
		end
	end
end

function neighbours(x,y,c)
	local nc=0
	for j=0.125,1,0.125 do--iterate over neighbouring tiles
  local nx,ny=x+flr(cos(j)+.5),y+flr(sin(j)+.5)
		if(pget(nx,ny)==c) nc+=1
 end
 return nc
end

function smoothnoise()
--smoothing iterations
for i=0,4 do
  for x=0,mx do
   for y=0,my do
    local t=neighbours(x,y,13)
    if t>5 then
     pset(x,y,13)
    elseif t<3 then
     pset(x,y,12)
    end
   end
  end
  
 flip()
 end
end

