p={x=0, y=0}
function _init()
	p = {x=0,y=0,s=3}
end

function p.draw(self)
	spr(1, self.x, self.y)
end

function p.update(self)
tx,ty=0,0
 if (btn(⬅️)) tx -= 1*self.s
	if (btn(➡️)) tx += 1*self.s
	if (btn(⬆️)) ty -= 1*self.s
	if (btn(⬇️)) ty += 1*self.s
	if tx*ty!=0 then
		tx*=.707
		ty*=.707
	end
	self.x = mid(0,self.x+tx,121)
	self.y = mid(0,self.y+ty,122)	
end

function _draw()
	cls()
	
 p.update(p)	
	p.draw(p)
end

